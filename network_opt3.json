{
    "ordererAddress": "0.0.0.0",
    "ordererPort": "7050",
    "vp0Address": "0.0.0.0",
    "vp0Port": "7051",
    "version": "2",
    "services": {
        "zookeeper": {
            "image": "zookeeper:3.4.9"
        },
        "kafka": {
            "image": "kchristidis/kafka",
            "environment": {
                 "KAFKA_BROKER_ID": "0",
                 "KAFKA_ZOOKEEPER_CONNECT": "zookeeper:2181",
                 "KAFKA_DEFAULT_REPLICATION_FACTOR": "3"
            },
            "depends_on": [
                 "zookeeper"
            ]
        },
        "cop": {
            "image": "rameshthoomu/fabric-cop-x86_64",
            "command": "sh -c 'cop server start -ca ~/.cop/ec.pem -ca-key ~/.cop/ec-key.pem -config /config/cop.json -address 0.0.0.0'",
            "ports": [
                 "8888:8888"
            ],
            "container_name": "cop0"
        },
        "orderer": {
            "image": "rameshthoomu/fabric-orderer-x86_64",
            "restart": "unless-stopped",
            "environment": {
                "ORDERER_GENERAL_LEDGERTYPE": "ram",
                "ORDERER_GENERAL_LISTENADDRESS": "0.0.0.0",
                "ORDERER_GENERAL_LISTENPORT": "7050",
                "ORDERER_GENERAL_GENESISMETHOD": "provisional",
                "ORDERER_GENERAL_GENESISFILE": "./genesisblock",
                "ORDERER_GENERAL_MAXWINDOWSIZE": "1000",
                "ORDERER_RAMLEDGER_HISTORY_SIZE": "100",
                "ORDERER_GENESIS_ORDERERTYPE": "kafka",
                "ORDERER_Genesis_BATCHTIMEOUT": "10s",
                "ORDERER_GENERAL_BATCHSIZE_MAXMESSAGECOUNT": "10",
                "ORDERER_KAFKA_BROKERS": "0.0.0.0:9092"
            },
            "command": "orderer",
            "ports": [
                 "7050:7050"
            ],
            "depends_on": [
                 "kafka0"
            ],
            "container_name": "orderer0"
        },
        "vp": {
            "image": "rameshthoomu/fabric-peer-x86_64",
            "restart": "unless-stopped",
            "environment": {
                 "CORE_PEER_ID": "vp",
                 "CORE_PEER_ADDRESSAUTODETECT": "false",
                 "CORE_NEXT": "true",
                 "CORE_PEER_ADDRESS": "0.0.0.0:PORTID",
                 "CORE_PEER_NETWORKID": "${CORE_PEER_NETWORKID}",
                 "CORE_PEER_COMMITTER_ENABLED": "true",
                 "CORE_PEER_COMMITTER_LEDGER_ORDERER": "orderer:7050",
                 "CORE_PEER_PROFILE_ENABLED": "true",
                 "CORE_PEER_DISCOVERY_PERIOD": "60s",
                 "CORE_PEER_DISCOVERY_TOUCHPERIOD": "60s",
                 "CORE_PEER_DISCOVERY_ROOTNODE": "vp0:7051",
                 "CORE_VM_ENDPOINT": "unix:///host/var/run/docker.sock",
                 "CORE_LOGGING_LEVEL": "DEBUG"
            },
            "volumes": [
                  "/var/run:/host/var/run/"
            ],
            "command": "peer node start",
            "links": [
                  "orderer",
                  "vp0",
                  "vp1",
                  "vp2"
            ],
            "ports": [
                  "PORTID:7051"
            ],
            "container_name": "vpID"
        }
    }
}
